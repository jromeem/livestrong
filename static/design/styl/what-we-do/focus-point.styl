.focus-point__figure
	margin-left auto
	margin-right auto
	text-align center
	.img__container,.img__container--hover
		width 200px
		height 200px
		overflow hidden
		position relative
		border-radius 100%
		margin 0 auto 1.5em
		text-align center
		.hover-expose
			transition all 600ms ease-in-out
			background rgba(0,0,0,0.35)
			position absolute
			visibility hidden
			opacity 0
			height 100%
			width 100%
			border-radius 100%
			overflow hidden
			padding 1.5em 1em 1em
			top 0
			h5
				LibelSuit()
				font-size 3.75em
				line-height 1.3
				color $yellow
				margin 0 auto 0.005em
				text-align center
			p
				Sentinel-SSm-Book-Italic()
				font-size 1.313em
				line-height 1.3
				text-align center
				color $white
		img
			width 100%
	.img__container--hover
		&:hover
			img
				filter blur(1px)
			.hover-expose
				transition all 600ms ease-in-out
				visibility visible
				opacity 1
	.focus-point__caption
		h4
			Sentinel-SSm-Book()
			font-size 1.25em
			line-height 1.3
			margin 0 auto 0.688em
			text-align center
		p
			HelveticaLight()
			font-size 1em
			line-height 1.3
			text-align center
			color $smoke
		.livestrong-nochrome
			Sentinel-SSm-Medium-Italic()
			font-size 1.125em
			&:hover
				color $black