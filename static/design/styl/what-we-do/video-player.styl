.video__player
	&.in-place
		width 100%
		max-width 800px
		margin 0 auto 6em
		.video__player--poster
			margin auto
			color $black
			display block
			position relative
			&:hover
				color $black
				&:before
					color $black
			img
				border-radius 3px 3px 0 0
			&:before
				FontAwesome()
				border-radius 100%
				background $white
				text-align center
				position absolute
				line-height 60px
				font-size 4.5em
				overflow hidden
				content '\f01d'
				margin auto
				opacity 0.7
				height 60px
				width 60px
				left 45%
				top 39%
		.video__player--cta
			height 2.5em
			border-radius 0 0 3px 3px
			background $off_black
			.livestrong-nochrome
				Sentinel-SSm-Light()
				font-size 1.125em
				color $off_white
				&:after
					FontAwesome()
					content: '\f105'
					margin-left 6px
					position relative
					top 1px