.hero__quote
	padding 11.5em 0 17.215em
	.hero__quote--img
		width 150px
		height 150px
		margin 0 auto
		overflow hidden
		border-radius 100%
		img
			width 100%
	.hero__quote--content
		h1
			Sentinel-SSm-Light()
			font-size 1.5em
			line-height 1.3
			margin 0 0 1em
			q
				&:before
					content: '\201C'
				&:after
					content: '\201D'
		.attribution
			HelveticaLight()
			font-size 1em
			line-height 1.3
			color $smoke

#footer
	.hero__quote
		padding 6.125em 0 6.588em
		.hero__quote--content
			h1
				font-size 2.25em
				text-align center
				margin 0 auto 0.798em
				q
					&:before
						display block
						font-size 2em
						margin 0 auto -0.438em
					&:after
						content ' '
						display none
			.attribution
				text-align center